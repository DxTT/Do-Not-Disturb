<?xml version="1.0" encoding="utf-8"?><!-- res/values/styles.xml -->
<resources>
    <!-- your app's theme inherits from the Material theme -->
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <!-- theme customizations -->
        <item name="android:colorPrimary">#E96143</item>
        <!-- darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">#F57F17</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:dialogTheme">@style/TimeDialog</item>
    </style>

    <style name="TimeDialog" parent="android:Theme.Material.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Notify" parent="android:Theme.Material.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>